.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
}

.button-group {
  display: flex;
  flex-direction: column;
  width: 80%;
}

button {
  margin: 10px 0;
  padding: 15px 0;
  background-color: #007AFF;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

