/* pages/page1/index.wxss */
.body{
  height: 100vh;
  background-color: rgb(253, 238, 104);
}

.head_title{
  font-weight: normal;
  /* display: block; */
}

.sub_title{
  font-weight: bold;
}

.header{
  background-color: rgb(243, 194, 34);
  padding: 10px 6px;
}

.main_task{
  margin:-10px 6px 0 6px;
  font-size: 1.1em;
}

.task_text{
  font-family: "微软雅黑";
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 50vh;
}

.countdown-wrapper {
  width: 220px;
  height: 220px;
}

.progress-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.countdown {
  width: 200px;
  height: 200px;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.countdown-text {
  font-size: 48px;
  font-weight: bold;
  color: #333;
}

