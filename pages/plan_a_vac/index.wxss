/* pages/page1/index.wxss */
.body{
  height: 100vh;
  /* gradient color */
  background: linear-gradient(0deg, rgb(198, 249, 88) 0%, rgb(149, 249, 138) 50%, rgb(228, 251, 192) 100%);
  
}

.head_title{
  font-weight: normal;
  /* display: block; */
}

.sub_title{
  font-weight: bold;
}

.header{
  background-color: rgb(243, 194, 34);
  padding: 10px 6px;
}

.main_task{
  margin:-10px 6px 0 6px;
  font-size: 1.1em;
}

.task_text{
  font-family: "黑体";
  font-size: 1.1em;
  font-weight: bold;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 50vh;
}

.countdown-wrapper {
  width: 220px;
  height: 220px;
}

.progress-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.countdown {
  width: 200px;
  height: 200px;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.countdown-text {
  font-size: 48px;
  font-family: sans-serif;
  font-weight: bold;
  color: #333;
}

